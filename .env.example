# Logging
LOG_LEVEL=INFO
JSON_LOGS=false  # Set to true for JSON output in production

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/rag
# DBOS Workflow (uses same Postgres for workflow state)
DBOS_SYSTEM_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/rag
DBOS_CONDUCTOR_KEY=  # Get from https://cloud.dbos.dev or self-hosted console
DBOS_CONDUCTOR_URL=  # Leave empty for cloud, or ws://localhost:9090/ for self-hosted

# Embedding provider: huggingface | openai | jina
EMBEDDING__PROVIDER=huggingface
EMBEDDING__MODEL=all-MiniLM-L6-v2
EMBEDDING__DIMENSION=384
EMBEDDING__API_KEY=

# LLM provider: openai | ollama | anthropic
LLM__PROVIDER=openai
LLM__MODEL=gpt-4o-mini
LLM__API_KEY=
LLM__BASE_URL=http://localhost:11434
# Opik (Observability)
OPIK__API_KEY=paste-key-here
OPIK__WORKSPACE=default

# Timeouts (seconds)
TIMEOUT__LLM_SECONDS=60
TIMEOUT__EMBEDDING_SECONDS=30
TIMEOUT__DB_SECONDS=10